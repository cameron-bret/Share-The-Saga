<h1>{{comment.title}}</h1>
<h3>{{comment.author}}</h3>
<p>{{comment.createdAt}}</p>
<p>{{comment.content}}</p>

<a href="/{{newsLinkId}}/comments/{{comment._id}}/edit"><button class="btn">Edit Comment</button></a>

<form action="/{{newsLinkId}}/comments/{{comment._id}}?_method=DELETE" method="POST">
    <button class="btn" type="submit">Delete Me</button>
</form>