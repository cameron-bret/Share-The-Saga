<div style="text-align: center; margin: 25px;">
    <a href="/{{bookId}}"><button class="btn">Back</button></a>
    <a href="/{{bookId}}/pages/create"><button class="btn">New Page</button></a>
    {{#each pages}}
    <div style="border: 4px solid black; margin: 20px auto; width: 60vw;">
        <div style="text-align: center; padding: 10px;">
            <h2>{{name}}</h2>
            <p>{{source}}</p>
            <p>{{date}}</p>
            <p>{{description}}</p>
            <p>{{genre}}</p>
            <a href="/{{../bookId}}/comments/{{_id}}"><button class="btn">Click me</button></a>
        </div>
    </div>
    {{/each}}
</div>